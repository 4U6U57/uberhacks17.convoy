# Unix-style newlines with a newline ending every file
[{*,.*}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 80

[{Makefile,makefile,*.mk}]
indent_style = tab

[*.md]
indent_size = 4

[*.sh]
max_line_length = 0

[*.js]
indent_style = tab
indent_size = 4
